{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compile",
      "command": "gcc",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${workspaceFolder}/Sources/*.c",
        "-I",
        "${workspaceFolder}/Headers",
        "-o",
        "${workspaceFolder}/Sources/snake.exe",
        "-Wall",
        "-static-libgcc",
        "-std=c11"
      ],
      "type": "shell",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
      // "problemMatcher":"$gcc"
    }
  ]
}
